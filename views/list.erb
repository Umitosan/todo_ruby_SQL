<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h3>Here are all the lasks in this list:</h3>

  <ul>
    <% @list.tasks.each do |task| %>
      <li><%= task.description %></li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no tasks on this list!</p>
  <% end %>

<div class="container">
    <a href="/"><button type="btn btn-info" >Home</button></a>
</div>
